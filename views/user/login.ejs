<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login and Register Forms</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
  <style>
    #register-form {
      display: none; /* Initially hide the register form */
    }
  </style>
</head>
<body class="flex items-center justify-center h-screen bg-gradient-to-br from-orange-400 to-orange-600">

  <div id="auth-container" class="bg-white shadow-2xl rounded-2xl p-10 w-96 transition-all">
    <h2 id="form-title" class="text-2xl font-bold text-center text-orange-500 mb-6">Login</h2>

    <!-- Login Form -->
    <form id="login-form" action="/login" method="POST" class="space-y-5">
      <div>
        <label for="login-email" class="block font-medium text-gray-600">Email</label>
        <input type="email" id="login-email" name="email" placeholder="Enter your email"
               class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500">
      </div>
      <div>
        <label for="login-password" class="block font-medium text-gray-600">Password</label>
        <input type="password" id="login-password" name="password" placeholder="Enter your password"
               class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500">
      </div>
      <button type="submit" class="w-full p-2 bg-orange-500 text-white font-bold rounded-lg hover:bg-orange-600">Login</button>
    </form>

    <!-- Register Form -->
    <form id="register-form" action="/register" method="POST" class="space-y-5">
        <% if (msg) { %>
            <p class="text-red-500 text-sm"><%= msg %></p>
          <% } %>

      <div>
        <label for="name" class="block font-medium text-gray-600">Name</label>
        <input type="text" id="name" name="name" placeholder="Write your name here..."
               class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500">
      </div>
      <div>
        <label for="username" class="block font-medium text-gray-600">Username</label>
        <input type="text" id="username" name="username" placeholder="Choose a username"
               class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500">
      </div>
      <div>
        <label for="register-email" class="block font-medium text-gray-600">Email</label>
        <input type="email" id="register-email" name="email" placeholder="Enter your email"
               class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500">
      </div>
      <div>
        <label for="register-password" class="block font-medium text-gray-600">Password</label>
        <input type="password" id="register-password" name="password" placeholder="Create a password"
               class="w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:border-orange-500" required>
      </div>
      <button type="submit" class="w-full p-2 bg-orange-500 text-white font-bold rounded-lg hover:bg-orange-600">Register</button>
    </form>

    <p class="text-center mt-4">
      <span id="toggle-text">Don't have an account?</span>
      <button id="toggle-btn" class="text-orange-500 font-bold hover:underline">Register here</button>
    </p>
  </div>

  <script>
    const toggleBtn = document.getElementById('toggle-btn');
    const loginForm = document.getElementById('login-form');
    const registerForm = document.getElementById('register-form');
    const formTitle = document.getElementById('form-title');
    const toggleText = document.getElementById('toggle-text');
    const authContainer = document.getElementById('auth-container');

    let isLogin = true; // Track the current mode (login/register)

    toggleBtn.addEventListener('click', () => {
      isLogin = !isLogin;

      // Toggle between showing and hiding forms
      loginForm.style.display = isLogin ? 'block' : 'none';
      registerForm.style.display = isLogin ? 'none' : 'block';

      // Update form title and text
      formTitle.textContent = isLogin ? 'Login' : 'Register';
      toggleText.textContent = isLogin ? "Don't have an account?" : 'Already have an account?';
      toggleBtn.textContent = isLogin ? 'Register here' : 'Login here';

      // GSAP animation for smooth form transition
      gsap.fromTo(
        authContainer,
        { x: isLogin ? 100 : -100, opacity: 0 },
        { x: 0, opacity: 1, duration: 0.8, ease: 'power2.out' }
      );
    });
  </script>

</body>
</html>
